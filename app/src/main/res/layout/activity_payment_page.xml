<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="@string/layout_direction"
    tools:context="gofereatsdriver.views.main.payment.PaymentPage">

    <include
        android:id="@+id/header"
        layout="@layout/header" />


    <RelativeLayout
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/d_buttomboarder"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_normal">

        <ImageView
            android:id="@+id/paypalimg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/paypal" />

        <com.obs.CustomTextView
            android:id="@+id/payment_email"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/paypalimg"
            android:text="@string/addpayout"
            android:textColor="@color/textblack"
            android:textSize="@dimen/text_xlarge" />

        <com.obs.CustomTextView
            style="@style/uber_clone_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_normal"
            android:text="q"
            android:textSize="@dimen/text_xlarge" />
    </RelativeLayout>


</RelativeLayout>
