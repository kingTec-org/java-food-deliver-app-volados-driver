<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvReasonlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white">


    <RelativeLayout
        android:id="@+id/rltReasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_xsmall">

        <ImageView
            android:id="@+id/ivReasonsicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/shopping_bag"
            android:visibility="gone" />

        <com.obs.CustomTextView
            android:id="@+id/tvreasons"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_xxsmall"
            android:layout_toEndOf="@+id/ivReasonsicon"
            android:layout_toStartOf="@+id/ivReasontick"
            android:paddingStart="@dimen/margin_xxsmall"
            android:text=""
            android:textSize="@dimen/text_medium"
            android:textAlignment="viewStart"
        />


        <ImageView
            android:id="@+id/ivReasontick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleX=".5"
            android:scaleY=".5"
            android:src="@drawable/bluecheck"
            android:tint="@color/app_green"
            android:visibility="invisible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
